{
    "version": 2,
    "builds": [
      { "src": "*.html", "use": "@vercel/static" },
      { "src": "guestterms/**/*.html", "use": "@vercel/static" },
      { "src": "cookie-policy/**/*.html", "use": "@vercel/static" },
      { "src": "scripts/**/*.js", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/guestterms/en/?",        "dest": "/guestterms/en/index.html" },
      { "src": "/guestterms/es/?",        "dest": "/guestterms/es/index.html" },
      { "src": "/cookie-policy/en/?",     "dest": "/cookie-policy/en/index.html" },
      { "src": "/cookie-policy/es/?",     "dest": "/cookie-policy/es/index.html" }
    ]
  }
  